<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/player2_table"
            class="net.alberlet.minigame.Column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/scoreboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/player2_scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/player2_own_score"
                    android:layout_width="@dimen/score_size"
                    android:layout_height="@dimen/score_size"
                    android:background="@drawable/scores_background_without_top_border"
                    android:ems="10"
                    android:inputType="number"
                    android:rotationX="-180"
                    android:rotationY="-180"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/player2_opponent_score"
                    android:layout_width="@dimen/score_size"
                    android:layout_height="@dimen/score_size"
                    android:background="@drawable/scores_background"
                    android:ems="10"
                    android:inputType="number"
                    android:rotationX="-180"
                    android:rotationY="-180"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/lighter_red"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/dice_board"
                android:layout_width="@dimen/dice_size"
                android:layout_height="@dimen/dice_size"
                android:layout_margin="10dp"
                android:background="@drawable/dice_board_background"
                android:padding="@dimen/dice_padding_size">

                <ImageView
                    android:id="@+id/dice"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/dice_background" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/player1_scores"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/player1_opponent_score"
                    android:layout_width="@dimen/score_size"
                    android:layout_height="@dimen/score_size"
                    android:background="@drawable/scores_background_without_bottom_border"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/lighter_red"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/player1_own_score"
                    android:layout_width="@dimen/score_size"
                    android:layout_height="@dimen/score_size"
                    android:background="@drawable/scores_background"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player1_table"
            class="net.alberlet.minigame.Column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background_without_bottom_border">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/table_cell_size"
                    android:layout_height="@dimen/table_cell_size"
                    android:background="@drawable/cell_background">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="260dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/turn_display"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@drawable/cell_background"
            android:gravity="center_horizontal|center_vertical"
            android:shadowColor="@color/dark_red"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="Turn"
            android:textColor="@color/bone"
            android:textSize="26sp"
            android:textStyle="bold|italic"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>